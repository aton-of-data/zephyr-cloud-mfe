{
  "name": "react-vite-mf",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --filter './host' --filter './remote' --filter './shared-state' --parallel dev",
    "dev-host": "pnpm --filter './host' dev",
    "dev-remote": "pnpm --filter './remote' dev",
    "dev-shared-state": "pnpm --filter './shared-state' dev",
    "build": "pnpm build-shared-state && pnpm build-remote && pnpm build-host",
    "build-host": "pnpm --filter './host' build",
    "build-remote": "pnpm --filter './remote' build",
    "build-shared-state": "pnpm --filter './shared-state' build",
    "preview": "pnpm --filter './host' preview",
    "docs:serve": "serve docs",
    "docs:watch": "typedoc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "serve": "^14.2.5",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typedoc-plugin-mermaid": "^1.12.0"
  }
}
