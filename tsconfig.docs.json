{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "./shared-state/src/**/*",
    "./remote/src/**/*",
    "./host/src/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/*.d.ts",
    "**/tsconfig*.json",
    "**/vite.config.ts",
    "**/*.config.ts",
    "**/main.tsx",
    "**/bootstrap.tsx",
    "**/App.tsx"
  ]
}
